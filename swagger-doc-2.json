{
    "openapi": "3.0.2",
    "info": {
        "title": "Banners",
        "version": "API 1.0",
        "description": "API for managing banners"
    },
    "servers": [
        {
            "url": "https://api.example.com/v1",
            "description": "Production server"
        },
        {
            "url": "https://test-api.example.com",
            "description": "Test server"
        }
    ],
    "paths": {
        "/banners": {
            "get": {
                "tags": [
                    "banner"
                ],
                "deprecated": true,
                "summary": "Получение списка баннеров",
                "operationId": "getBanners",
                "parameters": [
                    {
                        "name": "bannerCategory",
                        "description": "Категория баннера",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "Категория 1",
                                "Категория 2",
                                "Категория 3"
                            ],
                            "default": "Категория 1"
                        },
                        "example": "Категория 1"
                    },
                    {
                        "name": "isVisible",
                        "description": "Видимость баннера",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "default": true
                        },
                        "example": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Результат выполнения операции и список баннеров",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "$ref": "#/components/schemas/Result"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Banner"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка входных данных",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Ресурс не найден",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "banner"
                ],
                "summary": "Создание нового баннера",
                "operationId": "createBanner",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/RequestBody"
                                    },
                                    {
                                        "type": "object",
                                        "required": [
                                            "title",
                                            "image",
                                            "bannerCategory",
                                            "isVisible",
                                            "link"
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Результат выполнения операции и созданный баннер",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "$ref": "#/components/schemas/Result"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Banner"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка входных данных",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Ресурс не найден",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/banners/{id}": {
            "patch": {
                "tags": [
                    "banner"
                ],
                "summary": "Обновление существующего баннера",
                "operationId": "updateBanner",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID баннера, параметры которого нужно обновить",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        },
                        "example": 1
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/RequestBody"
                                    },
                                    {
                                        "type": "object",
                                        "minProperties": 1
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Результат выполнения операции и обновленный баннер",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "$ref": "#/components/schemas/Result"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Banner"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка входных данных",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Ресурс не найден",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Result": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Дата, время получения ответа",
                        "example": "2021-04-25T21:30:05+03:00"
                    },
                    "status": {
                        "type": "integer",
                        "format": "int32",
                        "description": "HTTP код ответа",
                        "example": 200
                    },
                    "service": {
                        "type": "string",
                        "description": "Название сервиса вернувшего ответ",
                        "example": "banners"
                    },
                    "message": {
                        "type": "string",
                        "description": "Текстовое описание результата выполнения операции",
                        "example": "Запрос выполнен успешно"
                    }
                }
            },
            "ApiError": {
                "type": "object",
                "properties": {
                    "result": {
                        "$ref": "#/components/schemas/Result"
                    },
                    "data": {
                        "type": "array",
                        "items": {},
                        "example": []
                    }
                }
            },
            "Banner": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Заголовок баннера",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "description": "Заголовок баннера",
                        "example": "Заголовок баннера"
                    },
                    "mainText": {
                        "type": "string",
                        "description": "Основной текст",
                        "example": "Основной текст баннера"
                    },
                    "image": {
                        "type": "string",
                        "format": "url",
                        "description": "Ссылка на картинку для баннера",
                        "example": "https://example.com/banners/banner1.jpg"
                    },
                    "bannerCategory": {
                        "type": "string",
                        "enum": [
                            "Категория 1",
                            "Категория 2",
                            "Категория 3"
                        ],
                        "default": "Категория 1",
                        "description": "Категория баннера",
                        "example": "Категория 1"
                    },
                    "isVisible": {
                        "type": "boolean",
                        "default": true,
                        "description": "Видимость баннера",
                        "example": true
                    },
                    "link": {
                        "type": "string",
                        "format": "url",
                        "description": "Ссылка на страницу с подробной информацией",
                        "example": "https://example.com/banners/banner1"
                    }
                }
            },
            "RequestBody": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Заголовок баннера",
                        "example": "Заголовок баннера"
                    },
                    "mainText": {
                        "type": "string",
                        "description": "Основной текст",
                        "example": "Основной текст баннера"
                    },
                    "image": {
                        "type": "string",
                        "format": "url",
                        "description": "Ссылка на картинку для баннера",
                        "example": "https://example.com/banners/banner1.jpg"
                    },
                    "bannerCategory": {
                        "type": "string",
                        "enum": [
                            "Категория 1",
                            "Категория 2",
                            "Категория 3"
                        ],
                        "default": "Категория 1",
                        "description": "Категория баннера",
                        "example": "Категория 1"
                    },
                    "isVisible": {
                        "type": "boolean",
                        "default": true,
                        "description": "Видимость баннера",
                        "example": true
                    },
                    "link": {
                        "type": "string",
                        "format": "url",
                        "description": "Ссылка на страницу с подробной информацией",
                        "example": "https://example.com/banners/banner1"
                    }
                }
            }
        }
    }
}
