"get": {
    "tags": [
        "banner"
    ],
    "summary": "Получение списка баннеров",
    "operationId": "getBanners",
    "parameters": [
        {
            "name": "bannerCategory",
            "description": "Категория баннера",
            "in": "query",
            "required": false,
            "schema": {
                "type": "string",
                "enum": [
                    "Категория 1",
                    "Категория 2",
                    "Категория 3"
                ],
                "default": "Категория 1"
            },
            "example": "Категория 1"
        },
        {
            "name": "isVisible",
            "description": "Видимость баннера",
            "in": "query",
            "required": false,
            "schema": {
                "type": "boolean",
                "default": true
            },
            "example": true
        }
    ],
    "responses": {
        "200": {
            "description": "Результат выполнения операции и список баннеров",
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "result": {
                                "type": "object",
                                "properties": {
                                    "timestamp": {
                                        "type": "string",
                                        "format": "date-time",
                                        "description": "Дата, время получения ответа",
                                        "example": "2021-04-25T21:30:05+03:00"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "format": "int32",
                                        "description": "HTTP код ответа",
                                        "example": 200
                                    },
                                    "service": {
                                        "type": "string",
                                        "description": "Название сервиса вернувшего ответ",
                                        "example": "banners"
                                    },
                                    "message": {
                                        "type": "string",
                                        "description": "Текстовое описание результата выполнения операции",
                                        "example": "Запрос выполнен успешно"
                                    }
                                }
                            },
                            "data": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32",
                                            "description": "Заголовок баннера",
                                            "example": 1
                                        },
                                        "title": {
                                            "type": "string",
                                            "description": "Заголовок баннера",
                                            "example": "Заголовок баннера"
                                        },
                                        "mainText": {
                                            "type": "string",
                                            "description": "Основной текст",
                                            "example": "Основной текст баннера"
                                        },
                                        "image": {
                                            "type": "string",
                                            "format": "url",
                                            "description": "Ссылка на картинку для баннера",
                                            "example": "https://example.com/banners/banner1.jpg"
                                        },
                                        "bannerCategory": {
                                            "type": "string",
                                            "enum": [
                                                "Категория 1",
                                                "Категория 2",
                                                "Категория 3"
                                            ],
                                            "default": "Категория 1",
                                            "description": "Категория баннера",
                                            "example": "Категория 1"
                                        },
                                        "isVisible": {
                                            "type": "boolean",
                                            "default": true,
                                            "description": "Видимость баннера",
                                            "example": true
                                        },
                                        "link": {
                                            "type": "string",
                                            "format": "url",
                                            "description": "Ссылка на страницу с подробной информацией",
                                            "example": "https://example.com/banners/banner1"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "400": {
            "description": "Ошибка входных данных",
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "#/components/schemas/ApiError"
                    }
                }
            }
        },
        "404": {
            "description": "Ресурс не найден",
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "#/components/schemas/ApiError"
                    }
                }
            }
        }
    }
},